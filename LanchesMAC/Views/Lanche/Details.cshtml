@model Lanche

<div class="container">
    <div class="row">
        <div class="card">
            <div class=text-center">
                <img src="@Model.ImagemUrl" alt="" class="img-fluid" />
            </div>

            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>

                <p class="btn btn-group align-content-lg-end">
                    <a class="btn btn-outline-info" id="cartButton" asp-controller="Lanche" asp-action="List">
                       Ver todos os lanches
                    </a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-LancheId="@Model.LancheId">
                        @Model.Nome ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
<div class="card" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
</div>