
<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </a>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      @foreach (var Categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List"
                   style="color:black" asp-route-categoria="@Categoria.CategoriaName">@Categoria.CategoriaName</a>
            </li>

        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria=""
               style="color:black" asp-rout-categoria="">Todos os lanches</a>
        </li>
    </ul>
</div>
